{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "./dist",
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "noEmitOnError": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": ["node_modules/@0xproject/typescript-typings/types", "node_modules/@types"]
  }
}
